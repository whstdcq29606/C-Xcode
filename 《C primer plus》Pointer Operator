#include <stdio.h>
// Operation to Array by pointer
int main(void){
    int a[2]={100,200};
    int b[2]={300,400};
    //What i Should do is testing the "*p++","(*p)++","*(p++)" and"*++p","*(++p)".
    int *p1,*p2,*p3;
    p1=p2=a;p3=b;
    printf("p1      p2      p3\n");
    printf("%d      %d      %d\n",*p1,*p2,*p3);
    printf("%d      %d      %d\n",*p1++,(*p2)++,*(p3++));
    printf("%d      %d      %d\n",*p1,*p2,*p3);
    return 0;
}
